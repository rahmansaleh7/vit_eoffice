<odoo>
	<data>

		<record id="view_vit_eoffice_surat_tree" model="ir.ui.view">
			<field name="name">vit_eoffice.surat.tree</field>
			<field name="model">vit_eoffice.surat</field>
			<field name="type">tree</field>
			<field name="priority" eval="8" />

			<field name="arch" type="xml">
				<tree string="Surat">
					<field name="nosurat" />
					<field name="name" />
					<field name="tanggal" />
					<field name="dari" />					
				</tree>
			</field>
		</record>

		<record id="view_vit_eoffice_surat_form" model="ir.ui.view">
			<field name="name">vit_eoffice.surat.form</field>
			<field name="model">vit_eoffice.surat</field>
			<field name="type">form</field>
			<field name="priority" eval="8" />

			<field name="arch" type="xml">
				<form string="Surat">
					<sheet>

						<div class="oe_title">
							<label for="nosurat"
									string="No Surat"/>
							<h1><field name="nosurat"/></h1>
						</div>

							<group>
								<group>
									<field name="name" />
									<field name="tanggal" />
									<field name="dari" />
								</group>
								<group>
									<field name="klasifikasisurat" />
									<field name="templatesurat" />
								</group>
							</group>

							<notebook>
								<page string="Isi Surat">
									<field name="isisurat" />
								</page>

								<page string="History Surat">
									<field name="history" />
								</page>
							</notebook>
						
					</sheet>
				</form>
			</field>
		</record>

	</data>
</odoo>