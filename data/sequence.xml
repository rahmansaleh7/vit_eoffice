<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>

		<record id="surat_sequence" model="ir.sequence">
			<field name="name">Surat Sequence</field>
			<field name="code">vit_eoffice.surat</field>
			<field name="prefix">UMJ/%(year)s/%(month)s/</field><!-- Code unik di awal -->
			<field name="suffix"></field>
			<field name="padding">3</field> <!-- Panjang code unik -->
			<field name="next_number_actual">1</field>
			<field name="number_increment">1</field>
			<field name="implementation">standard</field>
		</record>

	</data>
</odoo>